<% layout('/layouts/boilerplate.ejs') %>

<div class="row-md p-3">
  <div class="form-container form-parent-div">
    <form
      action="/signup"
      method="post"
      class="needs-validation"
      autocomplete="off"
      novalidate
    >
      <div class="mb-3">
        <h4 class="ms-auto signup-heading mb-5">Sign Up</h4>
        <div class="mt-3">
          <input
            name="username"
            id="username"
            class="form-control"
            type="text"
            placeholder="Username"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Username is required!</div>
        </div>
        <div class="mt-3">
          <input
            name="email"
            id="email"
            class="form-control"
            type="email"
            placeholder="Email"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Email is required!</div>
        </div>
        <div class="mt-3">
          <input
            name="password"
            id="password"
            class="form-control"
            type="password"
            placeholder="Password"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Password is required!</div>
        </div>
        <div class="mt-4 ms-auto btn-container">
          <button class="btn btn-success signup-btn">Signup</button>
        </div>
      </div>
    </form>
    <div class="text-container">
      <a href="/login">Already have an account?</a>
    </div>
  </div>
</div>
