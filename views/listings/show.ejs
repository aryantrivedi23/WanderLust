<% layout('/layouts/boilerplate.ejs') %>

<div class="show-container">
  <h3><%= result.title %></h3>
  <img src="<%= result.image %>" alt="image" />
  <p><%= result.description %></p>
  <p>&#8377; <%= result.price.toLocaleString("en-IN") %></p>
  <p><%= result.location %></p>
  <p><%= result.country %></p>
  <div class="show-btns">
    <form method="post" action="/listings/<%= result._id %>?_method=DELETE">
      <button class="btn">Delete</button>
    </form>
    <a href="/listings/<%= result._id %>/edit" class="btn btn-dark">Edit</a>
  </div>
  <hr />
  <div>
    <h3>Leave a Review</h3>
    <form
      action="/listings/<%= result._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          class="form-range"
          name="rating"
          id="rating"
          min="1"
          max="5"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="comment"
          id="comment"
          rows="10"
          cols="30"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback plus-jakarta-sans-bold">
          Comment is required!
        </div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
    <% if (result.reviews.length != 0) { %>
    <hr />
    <h3>Reviews</h3>
    <div class="row">
      <% for (review of result.reviews) { %>
      <div class="card col-5 m-2">
        <div class="card-body p-3">
          <h5 class="card-title mb-3">Spammer</h5>
          <p class="card-text mb-3"><%= review.comment %></p>
          <p class="card-text mb-3">‚≠ê <%= review.rating %></p>
          <form
            method="POST"
            action="/listings/<%= result._id %>/reviews/<%= review._id %>?_method=DELETE"
            class="show-btns-2"
          >
            <button type="submit" class="btn btn-outline-dark btn-sm mb-2">
              Delete
            </button>
          </form>
        </div>
      </div>
      <% } %> <% } %>
    </div>
  </div>
</div>
